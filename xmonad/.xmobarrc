Config { font = "-xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso8859-15"
       , borderColor = "black"
       , border = NoBorder
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "CYTZ" ["-t","<tempC>C, <skyCondition>","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "wlp2s0" ["-t","<rx> KB, <tx> KB","-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 50
    		    , Run Date "%a %b %_d, %Y %I:%M %p" "date" 10
                    , Run TopMem ["-t","<name1>:<mem1>"] 100
                    , Run StdinReader
                    -- battery monitor
                    , Run Battery        [ "--template" , "Batt: <acstatus>"
                                         , "--Low"      , "10"        -- units: %
                                         , "--High"     , "80"        -- units: %
                                         , "--low"      , "darkred"
                                         , "--normal"   , "darkorange"
                                         , "--high"     , "darkgreen"

                                         , "--" -- battery specific options
                                                   -- discharging status
                                                   , "-o"   , "<left>% (<timeleft>)"
                                                   -- AC "on" status
                                                   , "-O"   , "<fc=#dAA520>Charging</fc>"
                                                   -- charged status
                                                   , "-i"   , "<fc=#006000>Charged</fc>"
                                         ] 50
                    ]
       , alignSep = "}{"
       , template = "%StdinReader% }{ %topmem% | %cpu% | %memory% | %wlp2s0% | <fc=#ee9a00>%date%</fc> | %CYTZ% | %battery%"
       }
